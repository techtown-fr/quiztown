---
import Layout from '../layouts/Layout.astro';
import { getLangFromUrl, useTranslations } from '../i18n';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<Layout title={t('seo.title')} description={t('seo.description')}>
  <!-- Hero Section -->
  <section class="hero">
    <div class="hero-bg">
      <div class="hero-glow hero-glow--blue"></div>
      <div class="hero-glow hero-glow--violet"></div>
      <div class="hero-glow hero-glow--mint"></div>
    </div>

    <div class="hero-content">
      <h1 class="hero-title">
        <span class="hero-title-line">Play.</span>
        <span class="hero-title-line hero-title-line--violet">Vote.</span>
        <span class="hero-title-line hero-title-line--mint">Learn.</span>
      </h1>
      <p class="hero-subtitle">{t('landing.hero.subtitle')}</p>

      <div class="hero-actions">
        <a href={lang === 'en' ? '/en/host' : '/host'} class="btn btn--primary">
          <svg class="btn-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M12 5v14M5 12h14" stroke-linecap="round" />
          </svg>
          {t('landing.hero.cta.host')}
        </a>
        <a href="#join" class="btn btn--secondary">
          <svg class="btn-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M15 3h4a2 2 0 012 2v14a2 2 0 01-2 2h-4M10 17l5-5-5-5M15 12H3" stroke-linecap="round" stroke-linejoin="round" />
          </svg>
          {t('landing.hero.cta.play')}
        </a>
      </div>
    </div>

    <div class="hero-visual">
      <div class="hero-card hero-card--q">
        <div class="hero-card-badge">?</div>
        <div class="hero-card-lines">
          <div class="hero-card-line"></div>
          <div class="hero-card-line hero-card-line--short"></div>
        </div>
      </div>
      <div class="hero-card hero-card--a">
        <div class="hero-card-dot hero-card-dot--mint"></div>
        <div class="hero-card-line"></div>
      </div>
      <div class="hero-card hero-card--b">
        <div class="hero-card-dot hero-card-dot--coral"></div>
        <div class="hero-card-line"></div>
      </div>
    </div>
  </section>

  <!-- Features Section -->
  <section class="features" id="features">
    <h2 class="features-title">{t('landing.features.title')}</h2>

    <div class="features-grid">
      <div class="feature-card">
        <div class="feature-icon feature-icon--blue">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M13 10V3L4 14h7v7l9-11h-7z" stroke-linecap="round" stroke-linejoin="round" />
          </svg>
        </div>
        <h3 class="feature-title">{t('landing.features.instant.title')}</h3>
        <p class="feature-desc">{t('landing.features.instant.description')}</p>
      </div>

      <div class="feature-card">
        <div class="feature-icon feature-icon--violet">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M4.5 16.5c-1.5 1.26-2 5-2 5s3.74-.5 5-2c.71-.84.7-2.13-.09-2.91a2.18 2.18 0 00-2.91-.09zM12 15l-3-3a22 22 0 012-3.95A12.88 12.88 0 0122 2c0 2.72-.78 7.5-6 11a22.35 22.35 0 01-4 2z" stroke-linecap="round" stroke-linejoin="round" />
          </svg>
        </div>
        <h3 class="feature-title">{t('landing.features.realtime.title')}</h3>
        <p class="feature-desc">{t('landing.features.realtime.description')}</p>
      </div>

      <div class="feature-card">
        <div class="feature-icon feature-icon--mint">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <circle cx="12" cy="12" r="10" />
            <path d="M8 14s1.5 2 4 2 4-2 4-2M9 9h.01M15 9h.01" stroke-linecap="round" stroke-linejoin="round" />
          </svg>
        </div>
        <h3 class="feature-title">{t('landing.features.fun.title')}</h3>
        <p class="feature-desc">{t('landing.features.fun.description')}</p>
      </div>

      <div class="feature-card">
        <div class="feature-icon feature-icon--coral">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <rect x="2" y="3" width="20" height="14" rx="2" ry="2" />
            <path d="M8 21h8M12 17v4" stroke-linecap="round" stroke-linejoin="round" />
          </svg>
        </div>
        <h3 class="feature-title">{t('landing.features.screen.title')}</h3>
        <p class="feature-desc">{t('landing.features.screen.description')}</p>
      </div>
    </div>
  </section>

  <!-- Join Section -->
  <section class="join-section" id="join">
    <div class="join-content">
      <h2 class="join-title">{t('join.title')}</h2>
      <p class="join-subtitle">{t('landing.features.instant.description')}</p>
      <div class="join-input-wrapper">
        <input
          type="text"
          class="join-input"
          placeholder={t('join.nickname.placeholder')}
          maxlength="12"
          id="join-code-input"
        />
        <button class="btn btn--primary btn--join" id="join-btn">{t('join.cta')}</button>
      </div>
    </div>
  </section>
</Layout>

<style>
  /* ===== HERO ===== */
  .hero {
    position: relative;
    min-height: 85vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: var(--spacing-2xl) var(--spacing-lg);
    overflow: hidden;
    gap: var(--spacing-3xl);
  }

  @media (max-width: 768px) {
    .hero {
      flex-direction: column;
      min-height: auto;
      padding-top: var(--spacing-3xl);
      padding-bottom: var(--spacing-2xl);
      gap: var(--spacing-2xl);
    }
  }

  .hero-bg {
    position: absolute;
    inset: 0;
    overflow: hidden;
    z-index: 0;
  }

  .hero-glow {
    position: absolute;
    border-radius: 50%;
    filter: blur(100px);
    opacity: 0.15;
    animation: float 8s ease-in-out infinite;
  }

  .hero-glow--blue {
    width: 500px;
    height: 500px;
    background: var(--color-electric-blue);
    top: -100px;
    right: -100px;
  }

  .hero-glow--violet {
    width: 400px;
    height: 400px;
    background: var(--color-violet-pulse);
    bottom: -50px;
    left: -50px;
    animation-delay: -3s;
  }

  .hero-glow--mint {
    width: 300px;
    height: 300px;
    background: var(--color-mint-pop);
    top: 50%;
    left: 50%;
    animation-delay: -5s;
  }

  @keyframes float {
    0%, 100% { transform: translate(0, 0) scale(1); }
    33% { transform: translate(30px, -20px) scale(1.05); }
    66% { transform: translate(-20px, 20px) scale(0.95); }
  }

  .hero-content {
    position: relative;
    z-index: 1;
    max-width: 560px;
  }

  .hero-title {
    font-size: clamp(3rem, 8vw, 5rem);
    line-height: 1.05;
    margin: 0 0 var(--spacing-lg);
  }

  .hero-title-line {
    display: block;
    color: var(--color-electric-blue);
  }

  .hero-title-line--violet {
    color: var(--color-violet-pulse);
  }

  .hero-title-line--mint {
    color: var(--color-mint-pop);
  }

  .hero-subtitle {
    font-size: clamp(1rem, 2.5vw, 1.25rem);
    line-height: 1.6;
    opacity: 0.8;
    margin: 0 0 var(--spacing-xl);
  }

  .hero-actions {
    display: flex;
    gap: var(--spacing-md);
    flex-wrap: wrap;
  }

  /* ===== BUTTONS ===== */
  .btn {
    display: inline-flex;
    align-items: center;
    gap: var(--spacing-sm);
    padding: var(--spacing-md) var(--spacing-xl);
    font-family: var(--font-display);
    font-weight: 600;
    font-size: 1rem;
    text-decoration: none;
    border-radius: var(--radius-button);
    border: none;
    cursor: pointer;
    transition: transform var(--duration-fast), box-shadow var(--duration-fast), background var(--duration-fast);
  }

  .btn:hover {
    transform: translateY(-2px);
  }

  .btn:active {
    transform: translateY(0) scale(0.98);
  }

  .btn--primary {
    background: linear-gradient(135deg, var(--color-electric-blue), var(--color-violet-pulse));
    color: white;
    box-shadow: var(--shadow-glow-blue);
  }

  .btn--primary:hover {
    box-shadow: 0 0 30px rgb(37 99 235 / 0.4);
  }

  .btn--secondary {
    background: transparent;
    color: var(--color-electric-blue);
    border: 2px solid var(--color-electric-blue);
  }

  .btn--secondary:hover {
    background: var(--color-electric-blue);
    color: white;
  }

  .btn-icon {
    width: 18px;
    height: 18px;
  }

  /* ===== HERO VISUAL ===== */
  .hero-visual {
    position: relative;
    z-index: 1;
    width: 300px;
    height: 300px;
    flex-shrink: 0;
    display: none;
  }

  @media (min-width: 768px) {
    .hero-visual { display: block; }
  }

  .hero-card {
    position: absolute;
    background: white;
    border-radius: var(--radius-card);
    box-shadow: var(--shadow-card);
    padding: var(--spacing-lg);
    animation: cardFloat 6s ease-in-out infinite;
  }

  @media (prefers-color-scheme: dark) {
    .hero-card { background: #1e293b; }
  }

  .hero-card--q {
    top: 0;
    left: 20px;
    width: 220px;
  }

  .hero-card--a {
    bottom: 40px;
    left: 0;
    width: 140px;
    animation-delay: -2s;
  }

  .hero-card--b {
    bottom: 80px;
    right: 0;
    width: 140px;
    animation-delay: -4s;
  }

  @keyframes cardFloat {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-10px); }
  }

  .hero-card-badge {
    width: 40px;
    height: 40px;
    background: linear-gradient(135deg, var(--color-electric-blue), var(--color-violet-pulse));
    color: white;
    border-radius: 10px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-family: var(--font-display);
    font-weight: 700;
    font-size: 1.2rem;
    margin-bottom: var(--spacing-md);
  }

  .hero-card-lines {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-sm);
  }

  .hero-card-line {
    height: 8px;
    background: rgba(15, 23, 42, 0.08);
    border-radius: 4px;
  }

  @media (prefers-color-scheme: dark) {
    .hero-card-line { background: rgba(248, 250, 252, 0.1); }
  }

  .hero-card-line--short { width: 60%; }

  .hero-card-dot {
    width: 14px;
    height: 14px;
    border-radius: 50%;
    margin-bottom: var(--spacing-sm);
  }

  .hero-card-dot--mint { background: var(--color-mint-pop); }
  .hero-card-dot--coral { background: var(--color-alert-coral); }

  /* ===== FEATURES ===== */
  .features {
    max-width: 1200px;
    margin: 0 auto;
    padding: var(--spacing-3xl) var(--spacing-lg);
  }

  .features-title {
    text-align: center;
    font-size: clamp(1.5rem, 4vw, 2.5rem);
    margin-bottom: var(--spacing-3xl);
  }

  .features-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--spacing-xl);
  }

  @media (min-width: 640px) {
    .features-grid { grid-template-columns: repeat(2, 1fr); }
  }

  @media (min-width: 1024px) {
    .features-grid { grid-template-columns: repeat(4, 1fr); }
  }

  .feature-card {
    padding: var(--spacing-xl);
    border-radius: var(--radius-card);
    background: white;
    box-shadow: var(--shadow-card);
    transition: transform var(--duration-normal), box-shadow var(--duration-normal);
  }

  @media (prefers-color-scheme: dark) {
    .feature-card { background: #1e293b; }
  }

  .feature-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-card-hover);
  }

  .feature-icon {
    width: 48px;
    height: 48px;
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: var(--spacing-md);
  }

  .feature-icon svg {
    width: 24px;
    height: 24px;
  }

  .feature-icon--blue { background: rgba(37, 99, 235, 0.1); color: var(--color-electric-blue); }
  .feature-icon--violet { background: rgba(124, 58, 237, 0.1); color: var(--color-violet-pulse); }
  .feature-icon--mint { background: rgba(45, 212, 191, 0.1); color: var(--color-mint-pop); }
  .feature-icon--coral { background: rgba(251, 113, 133, 0.1); color: var(--color-alert-coral); }

  .feature-title {
    font-size: 1.1rem;
    margin: 0 0 var(--spacing-sm);
  }

  .feature-desc {
    font-size: 0.9rem;
    line-height: 1.6;
    opacity: 0.7;
    margin: 0;
  }

  /* ===== JOIN SECTION ===== */
  .join-section {
    max-width: 600px;
    margin: 0 auto;
    padding: var(--spacing-3xl) var(--spacing-lg);
    text-align: center;
  }

  .join-title {
    font-size: clamp(1.5rem, 4vw, 2.5rem);
    margin-bottom: var(--spacing-sm);
    background: linear-gradient(135deg, var(--color-electric-blue), var(--color-violet-pulse));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .join-subtitle {
    opacity: 0.7;
    margin-bottom: var(--spacing-xl);
  }

  .join-input-wrapper {
    display: flex;
    gap: var(--spacing-sm);
    max-width: 400px;
    margin: 0 auto;
  }

  @media (max-width: 480px) {
    .join-input-wrapper {
      flex-direction: column;
    }
  }

  .join-input {
    flex: 1;
    padding: var(--spacing-md) var(--spacing-lg);
    font-family: var(--font-body);
    font-size: 1rem;
    border: 2px solid rgba(15, 23, 42, 0.1);
    border-radius: var(--radius-button);
    background: white;
    color: var(--color-dark-slate);
    outline: none;
    transition: border-color var(--duration-fast), box-shadow var(--duration-fast);
  }

  @media (prefers-color-scheme: dark) {
    .join-input {
      background: #1e293b;
      color: var(--color-soft-white);
      border-color: rgba(248, 250, 252, 0.1);
    }
  }

  .join-input:focus {
    border-color: var(--color-electric-blue);
    box-shadow: var(--shadow-glow-blue);
  }

  .btn--join {
    white-space: nowrap;
  }
</style>
