---
import { getLangFromUrl, useTranslations, getLocalizedPath } from '../i18n';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const toggleLang = lang === 'fr' ? '/en' : '/';
---

<header class="header">
  <div class="header-inner">
    <a href={getLocalizedPath('/', lang)} class="logo">
      <span class="logo-icon">Q</span>
      <span class="logo-text">QuizTown</span>
    </a>

    <nav class="nav">
      <a href={getLocalizedPath('/', lang)} class="nav-link">{t('nav.home')}</a>
      <a href={getLocalizedPath('/host', lang)} class="nav-link nav-link--host">{t('nav.host')}</a>
      <a href={toggleLang} class="nav-link nav-link--lang">{t('nav.lang')}</a>
    </nav>

    <button class="burger" aria-label="Menu" id="burger-btn">
      <span></span>
      <span></span>
      <span></span>
    </button>
  </div>

  <nav class="mobile-nav" id="mobile-nav">
    <a href={getLocalizedPath('/', lang)} class="mobile-nav-link">{t('nav.home')}</a>
    <a href={getLocalizedPath('/host', lang)} class="mobile-nav-link">{t('nav.host')}</a>
    <a href={toggleLang} class="mobile-nav-link">{t('nav.lang')}</a>
  </nav>
</header>

<script>
  const burger = document.getElementById('burger-btn');
  const mobileNav = document.getElementById('mobile-nav');

  burger?.addEventListener('click', () => {
    burger.classList.toggle('is-open');
    mobileNav?.classList.toggle('is-open');
  });

  // Close on link click
  mobileNav?.querySelectorAll('a').forEach((link) => {
    link.addEventListener('click', () => {
      burger?.classList.remove('is-open');
      mobileNav?.classList.remove('is-open');
    });
  });
</script>

<style>
  .header {
    position: sticky;
    top: 0;
    z-index: 50;
    background: rgba(248, 250, 252, 0.9);
    backdrop-filter: blur(12px);
    border-bottom: 1px solid rgba(15, 23, 42, 0.08);
  }

  @media (prefers-color-scheme: dark) {
    .header {
      background: rgba(15, 23, 42, 0.9);
      border-bottom-color: rgba(248, 250, 252, 0.08);
    }
  }

  .header-inner {
    max-width: 1200px;
    margin: 0 auto;
    padding: var(--spacing-md) var(--spacing-lg);
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  .logo {
    display: flex;
    align-items: center;
    gap: var(--spacing-sm);
    text-decoration: none;
    font-family: var(--font-display);
    font-weight: 700;
    font-size: 1.25rem;
    color: var(--color-dark-slate);
  }

  @media (prefers-color-scheme: dark) {
    .logo { color: var(--color-soft-white); }
  }

  .logo-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 36px;
    height: 36px;
    background: linear-gradient(135deg, var(--color-electric-blue), var(--color-violet-pulse));
    color: white;
    border-radius: 10px;
    font-size: 1.1rem;
  }

  .nav {
    display: none;
    align-items: center;
    gap: var(--spacing-lg);
  }

  @media (min-width: 768px) {
    .nav { display: flex; }
    .burger { display: none !important; }
  }

  .nav-link {
    text-decoration: none;
    font-family: var(--font-body);
    font-weight: 500;
    font-size: 0.9rem;
    color: var(--color-dark-slate);
    transition: color var(--duration-fast);
  }

  @media (prefers-color-scheme: dark) {
    .nav-link { color: var(--color-soft-white); }
  }

  .nav-link:hover { color: var(--color-electric-blue); }

  .nav-link--host {
    background: var(--color-electric-blue);
    color: white !important;
    padding: var(--spacing-sm) var(--spacing-lg);
    border-radius: var(--radius-button);
    transition: background var(--duration-fast), transform var(--duration-fast);
  }

  .nav-link--host:hover {
    background: var(--color-violet-pulse);
    transform: translateY(-1px);
  }

  .nav-link--lang {
    font-size: 0.8rem;
    padding: 4px 10px;
    border: 1px solid currentColor;
    border-radius: var(--radius-full);
    opacity: 0.7;
    transition: opacity var(--duration-fast);
  }

  .nav-link--lang:hover { opacity: 1; }

  /* Burger */
  .burger {
    display: flex;
    flex-direction: column;
    gap: 5px;
    padding: 8px;
    background: none;
    border: none;
    cursor: pointer;
  }

  .burger span {
    display: block;
    width: 24px;
    height: 2px;
    background: var(--color-dark-slate);
    transition: transform var(--duration-normal), opacity var(--duration-normal);
  }

  @media (prefers-color-scheme: dark) {
    .burger span { background: var(--color-soft-white); }
  }

  .burger.is-open span:nth-child(1) { transform: rotate(45deg) translate(5px, 5px); }
  .burger.is-open span:nth-child(2) { opacity: 0; }
  .burger.is-open span:nth-child(3) { transform: rotate(-45deg) translate(5px, -5px); }

  /* Mobile Nav */
  .mobile-nav {
    max-height: 0;
    overflow: hidden;
    transition: max-height var(--duration-normal) ease-out;
    padding: 0 var(--spacing-lg);
  }

  .mobile-nav.is-open {
    max-height: 300px;
    padding-bottom: var(--spacing-lg);
  }

  .mobile-nav-link {
    display: block;
    padding: var(--spacing-sm) 0;
    text-decoration: none;
    font-family: var(--font-body);
    font-weight: 500;
    color: var(--color-dark-slate);
  }

  @media (prefers-color-scheme: dark) {
    .mobile-nav-link { color: var(--color-soft-white); }
  }

  @media (min-width: 768px) {
    .mobile-nav { display: none; }
  }
</style>
