{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@components/*": ["src/components/*"],
      "@islands/*": ["src/islands/*"],
      "@hooks/*": ["src/hooks/*"],
      "@firebase/*": ["src/firebase/*"],
      "@i18n/*": ["src/i18n/*"],
      "@types/*": ["src/types/*"]
    }
  },
  "include": ["src/**/*", "tests/**/*"]
}
