{
  "firestore": {
    "rules": "firestore.rules"
  },
  "database": {
    "rules": "database.rules.json",
    "instance": "quiztown-app-default-rtdb",
    "region": "europe-west1"
  },
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "cleanUrls": true,
    "trailingSlash": false,
    "headers": [
      {
        "source": "**/*.@(jpg|jpeg|gif|png|webp|avif|svg|ico)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "public, max-age=31536000, immutable"
          }
        ]
      },
      {
        "source": "/_astro/**/*.@(css|js)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "public, max-age=31536000, immutable"
          }
        ]
      },
      {
        "source": "**/*.@(woff|woff2|ttf|otf)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "public, max-age=31536000, immutable"
          }
        ]
      },
      {
        "source": "**",
        "headers": [
          {
            "key": "X-Content-Type-Options",
            "value": "nosniff"
          },
          {
            "key": "X-Frame-Options",
            "value": "DENY"
          },
          {
            "key": "X-XSS-Protection",
            "value": "1; mode=block"
          },
          {
            "key": "Referrer-Policy",
            "value": "strict-origin-when-cross-origin"
          },
          {
            "key": "Strict-Transport-Security",
            "value": "max-age=31536000; includeSubDomains"
          }
        ]
      }
    ],
    "rewrites": [
      {
        "source": "/play/**",
        "destination": "/play/demo.html"
      },
      {
        "source": "/host/live/**",
        "destination": "/host/live.html"
      },
      {
        "source": "/host/edit/**",
        "destination": "/host/edit.html"
      },
      {
        "source": "/screen/**",
        "destination": "/screen/demo.html"
      },
      {
        "source": "!/@(api|_astro|images|fonts|*.@(js|css|png|jpg|jpeg|gif|svg|ico|woff|woff2|webp|avif|json|xml|txt))",
        "destination": "/index.html"
      }
    ]
  }
}